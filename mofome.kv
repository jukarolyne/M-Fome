<Gerenciador>:
    Menu:
        name: 'menu'
    Cadastro:
        name: 'cadastro'
    CadastroTurmas:
        name: 'cadastroTurmas'
    CadastroMonitor:
        name: 'cadastroMonitor'
    CadastroOrdem:
        name: 'cadastroOrdem'
    RegistroDia:
        name: 'registroDia'
    Relatorio:
        name: 'relatorio'

<Menu>:
    BoxLayout:
        orientation:'vertical'
        padding: (30, 100, 30, 100)
        spacing: 10
        canvas:
            Color:
                rgba: [0.7,0.4,0.6,1]
            Rectangle:
                size: self.size
                pos: self.pos
        Image:
            source: 'logo_mofome4.png'
            size_hint: (1, 1)
            size_hint_y: None
            height: 150

        Button:
            text: 'Cadastro'
            on_release: app.root.current = 'cadastro'

        Button:
            text: 'Registro do Dia'
            on_release: app.root.current = 'registroDia'
        
        Button:
            text: 'Relatório Semanal'
            on_release: app.root.current = 'relatorio'

<Cadastro>:
    BoxLayout:
        orientation:'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'MóFome - Cadastro'
                    app_icon: 'logo2.png'
                    app_icon_width: '300dp'
                    on_release: app.root.current = 'menu'
                ActionButton:
                    text: 'Sair'
                    on_release: app.stop()

        BoxLayout:
            orientation:'vertical'
            padding: (30, 100, 30, 100)
            spacing: 10
            canvas:
                Color:
                    rgba: [0.7,0.4,0.6,1]
                Rectangle:
                    size: self.size
                    pos: self.pos
            
            Button:
                text: 'Cadastrar Turmas'
                on_release: app.root.current = 'cadastroTurmas'
            
            Button:
                text: 'Cadastrar Monitor'
                on_release: app.root.current = 'cadastroMonitor'

            Button:
                text: 'Cadastrar Ordem de almoço'
                on_release: app.root.current = 'cadastroOrdem'

<CadastroTurmas>
    BoxLayout:
        orientation:'vertical'
        canvas:
            Color:
                rgba: [0.7,0.4,0.6,1]
            Rectangle:
                size: self.size
                pos: self.pos
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'MóFome - Cadastro de Turmas'
                    app_icon: 'logo2.png'
                    app_icon_width: '300dp'
                    on_release: app.root.current = 'cadastro'
                ActionButton:
                    text: 'Sair'
                    on_release: app.stop()
        Label:
            text:'Turmas Cadastradas'
            size_hint_y: None
            height: 40

        ScrollView:
            BoxLayout:
                id: box
                orientation:'vertical'
                size_hint_y: None
                height: self.minimum_height

        BoxLayout:
            orientation: 'vertical'
            padding: 20
            spacing: 10
            canvas:
                Color:
                    rgba: [0.7,0.4,0.6,1]
                Rectangle:
                    size: self.size
                    pos: self.pos

            Label:
                text: 'Nome da Turma'
            TextInput:
                id: nomeTurma
                multiline: False
                size_hint_y: None
                height: 30

            Label:
                text:'Quantidade de Alunos'
            TextInput:
                id: qtdeAlunos
                multiline: False
                size_hint_y: None
                height: 30
        
        BoxLayout:
            orientation:'horizontal'
            padding: (20, 10, 10, 10)
            spacing: 5
                
            Button:
                size_hint_y: None
                height: 50
                width: 50
                text:'SALVAR'
                on_release: root.salvar_dadosTurma(nomeTurma.text, qtdeAlunos.text)
            
            Button:
                size_hint_y: None
                height: 50
                width: 50
                text:'EXCLUIR'
                on_release: root.remover_turma(nomeTurma.text)

<CadastroMonitor>:
    BoxLayout:
        orientation:'vertical'
        canvas:
            Color:
                rgba: [0.7,0.4,0.6,1]
            Rectangle:
                size: self.size
                pos: self.pos
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'MóFome - Cadastro de Monitor'
                    app_icon: 'logo2.png'
                    app_icon_width: '300dp'
                    on_release: app.root.current = 'cadastro'
                ActionButton:
                    text: 'Sair'
                    on_release: app.stop()
        Label:
            text:'Monitores Cadastrados'
            size_hint_y: None
            height: 40

        ScrollView:
            BoxLayout:
                id: box
                orientation:'vertical'
                size_hint_y: None
                height: self.minimum_height
        BoxLayout:
            orientation:'vertical'
            padding: 20
            spacing: 10
            canvas:
                Color:
                    rgba: [0.7,0.4,0.6,1]
                Rectangle:
                    size: self.size
                    pos: self.pos

            Label:
                text: 'Nome do Aluno'
                size_hint_y: None
                height: 30

            TextInput:
                id: nomeAluno         
                multiline: False
                size_hint_y: None
                height: 30
        
        BoxLayout:
            orientation:'horizontal'
            padding: (20, 10, 10, 10)
            spacing: 5
            Button:
                size_hint_y: None
                height: 50
                width: 50
                text:'SALVAR'
                on_release: root.salvar_monitor(nomeAluno.text)

            Button:
                size_hint_y: None
                height: 50
                width: 50
                text: 'EXCLUIR'
                on_release: root.remover_monitor(nomeAluno.text)

<CadastroOrdem>:
    BoxLayout:
        orientation:'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'MóFome - Ordem da Fila'
                    app_icon: 'logo2.png'
                    app_icon_width: '300dp'
                    on_release: app.root.current = 'menu'
                ActionButton:
                    text: 'Sair'
                    on_release: app.stop()
        BoxLayout:
            orientation: 'vertical'
            padding: (10, 10, 0, 15)
            spacing: 10
            canvas:
                Color:
                    rgba: [0.7,0.4,0.6,1]
                Rectangle:
                    size: self.size
                    pos: self.pos
            ScrollView:
                GridLayout:
                    id: grid
                    cols: 6
                    spacing: 10, 10
                    size_hint_y: None
                    height: self.minimum_height
                    width: self.minimum_width

            Button:
                text: 'Salvar Ordem'
                size_hint_y: None
                height: 50
                size_hint_x: None
                width: 100
                pos_hint: {'center_x': 0.5}
                on_release: root.salvar_Ordem()

<RegistroDia>:
    BoxLayout:
        orientation:'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'MóFome - Registro do Dia'
                    app_icon: 'logo2.png'
                    app_icon_width: '300dp'
                    on_release: app.root.current = 'menu'
                ActionButton:
                    text: 'Sair'
                    on_release: app.stop()

        BoxLayout:
            orientation: 'horizontal'
            padding: (20, 5, 20, 5)
            spacing: 5
            size_hint_y: None
            height: 100
            canvas:
                Color:
                    rgba: [0.7,0.4,0.6,1]
                Rectangle:
                    size: self.size
                    pos: self.pos
            
            BoxLayout:
                orientation:'vertical'   
                Label:
                    text: 'Data'
                    #size_hint_y: None
                    #height: 30

                Label:
                    id:datetimer
                    #size_hint_y: None
                    #height: 30

            BoxLayout:
                orientation:'vertical'
                Label:
                    text:'Dia da Semana'

                Label:
                    id: diaSemana
                    # size_hint_y: None
                    # height: 30
        
        BoxLayout:
            orientation:'vertical'
            padding: (20, 10, 10, 10)
            spacing: 15
            size_hint_y: None
            height: 200
            canvas:
                Color:
                    rgba: [0.7,0.4,0.6,1]
                Rectangle:
                    size: self.size
                    pos: self.pos

            Label:
                text:'Almoço do dia'
                size_hint_y: None
                height: 50

            TextInput:
                id: almoco
                hint_text: 'ex: feijão, arroz, frango e suco de acerola'
                multiline: False
                size_hint_y: None
                height: 30

            Spinner:
                id: spMonitor
                size_hint: None, None
                size: 150, 50
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                text: 'Escolha Monitor'
                values: 'selecionar'
            
        BoxLayout:
            orientation: 'vertical'
            padding: (20, 10, 20, 20)
            spacing: 20
            canvas:
                Color:
                    rgba: [0.7,0.4,0.6,1]
                Rectangle:
                    size: self.size
                    pos: self.pos
            
            Label:
                text:'Frequência'
                size_hint_y: None
                height: 30
            ScrollView:
                GridLayout:
                    id: grid
                    cols: 3
                    spacing: 10, 10
                    size_hint_y: None
                    height: self.minimum_height

            Button:
                text: 'Salvar Frequência'
                size_hint_y: None
                height: 50
                size_hint_x: None
                width: 200
                pos_hint: {'center_x': 0.5}
                on_release: root.salvar_frequencia(datetimer.text, almoco.text, spMonitor.text, diaSemana.text)

<Relatorio>:
    BoxLayout:
        orientation:'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'MóFome - Relatório Semanal'
                    app_icon: 'logo2.png'
                    app_icon_width: '300dp'
                    on_release: app.root.current = 'menu'
                ActionButton:
                    text: 'Sair'
                    on_release: app.stop()
        BoxLayout:
            orientation:'vertical'
            padding: 20
            spacing: 10
            canvas:
                Color:
                    rgba: [0.7,0.4,0.6,1]
                Rectangle:
                    size: self.size
                    pos: self.pos

            BoxLayout:
                id: box
                orientation: 'vertical'
                size: root.width, root.height
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            
            BoxLayout:
                orientation:'horizontal'
                spacing: 5
                BoxLayout:
                    orientation: 'vertical'
                    id:box3
                    size: root.width, root.height
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                BoxLayout:
                    orientation: 'vertical'
                    id:box4
                    size: root.width, root.height
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            