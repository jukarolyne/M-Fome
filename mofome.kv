<Gerenciador>:
    Menu:
        name: 'menu'
    Cadastro:
        name: 'cadastro'
    CadastroTurmas:
        name: 'cadastroTurmas'
    CadastroMonitor:
        name: 'cadastroMonitor'
    CadastroOrdem:
        name: 'cadastroOrdem'
    RegistroDia:
        name: 'registroDia'
    Relatorio:
        name: 'relatorio'

<Menu>:
    BoxLayout:
        orientation:'vertical'
        padding: (30, 100, 30, 100)
        spacing: 10
        canvas:
            Color:
                rgba: [0.7,0.4,0.6,1]
            Rectangle:
                size: self.size
                pos: self.pos
        
        Button:
            text: 'Cadastro'
            on_release: app.root.current = 'cadastro'

        Button:
            text: 'Registro do Dia'
            on_release: app.root.current = 'registroDia'
        
        Button:
            text: 'Relatório Semanal'
            on_release: app.root.current = 'relatorio'

<Cadastro>:
    BoxLayout:
        orientation:'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'MóFome - Cadastro'
                    on_release: app.root.current = 'menu'
                ActionButton:
                    text: 'Sair'
                    on_release: app.stop()

        BoxLayout:
            orientation:'vertical'
            padding: (30, 100, 30, 100)
            spacing: 10
            canvas:
                Color:
                    rgba: [0.7,0.4,0.6,1]
                Rectangle:
                    size: self.size
                    pos: self.pos
            
            Button:
                text: 'Cadastrar Turmas'
                on_release: app.root.current = 'cadastroTurmas'
            
            Button:
                text: 'Cadastrar Monitor'
                on_release: app.root.current = 'cadastroMonitor'

            Button:
                text: 'Cadastrar Ordem de almoço'
                on_release: app.root.current = 'cadastroOrdem'

<CadastroTurmas>
    BoxLayout:
        orientation:'vertical'
        canvas:
            Color:
                rgba: [0.7,0.4,0.6,1]
            Rectangle:
                size: self.size
                pos: self.pos
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'MóFome - Cadastro de Turmas'
                    on_release: app.root.current = 'cadastro'
                ActionButton:
                    text: 'Sair'
                    on_release: app.stop()
        ScrollView:
            BoxLayout:
                id: box
                orientation:'vertical'
                size_hint_y: None
                height: self.minimum_height

        BoxLayout:
            orientation: 'vertical'
            padding: 20
            spacing: 10
            canvas:
                Color:
                    rgba: [0.7,0.4,0.6,1]
                Rectangle:
                    size: self.size
                    pos: self.pos

            Label:
                text: 'Nome da Turma'
            TextInput:
                id: nomeTurma
                multiline: False
                size_hint_y: None
                height: 30

            Label:
                text:'Matrícula'
            TextInput:
                id: matriculaTurma
                multiline: False
                size_hint_y: None
                height: 30
                
            Button:
                size_hint_y: None
                height: 50
                size_hint_x: None
                width: 100
                pos_hint: {'center_x': 0.5}
                text:'SALVAR'
                on_release: root.salvar_dadosTurma(nomeTurma.text, matriculaTurma.text)

<CadastroMonitor>:
    BoxLayout:
        orientation:'vertical'
        canvas:
            Color:
                rgba: [0.7,0.4,0.6,1]
            Rectangle:
                size: self.size
                pos: self.pos
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'MóFome - Cadastro de Monitor'
                    on_release: app.root.current = 'cadastro'
                ActionButton:
                    text: 'Sair'
                    on_release: app.stop()
        ScrollView:
            BoxLayout:
                id: box
                orientation:'vertical'
                size_hint_y: None
                height: self.minimum_height
        BoxLayout:
            orientation:'vertical'
            padding: 20
            spacing: 10
            canvas:
                Color:
                    rgba: [0.7,0.4,0.6,1]
                Rectangle:
                    size: self.size
                    pos: self.pos

            Label:
                text: 'Nome do Aluno'
                size_hint_y: None
                height: 30

            TextInput:
                id: nomeAluno         
                multiline: False
                size_hint_y: None
                height: 30

            Button:
                size_hint_y: None
                height: 50
                size_hint_x: None
                width: 100
                pos_hint: {'center_x': 0.5}
                text:'SALVAR'
                on_release: root.salvar_dadosMonitor(nomeAluno.text)

<CadastroOrdem>:
    BoxLayout:
        orientation:'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'MóFome - Ordem da Fila'
                    on_release: app.root.current = 'menu'
                ActionButton:
                    text: 'Sair'
                    on_release: app.stop()
        BoxLayout:
            orientation: 'vertical'
            padding: (10, 10, 0, 15)
            spacing: 10
            canvas:
                Color:
                    rgba: [0.7,0.4,0.6,1]
                Rectangle:
                    size: self.size
                    pos: self.pos
            ScrollView:
                GridLayout:
                    id: grid
                    cols: 6
                    spacing: 10, 10
                    size_hint_y: None
                    height: self.minimum_height
                    width: self.minimum_width

            Button:
                text: 'Salvar Ordem'
                size_hint_y: None
                height: 50
                size_hint_x: None
                width: 100
                pos_hint: {'center_x': 0.5}
                on_release: root.salvar_Ordem()

<RegistroDia>:
    BoxLayout:
        orientation:'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'MóFome - Registro do Dia'
                    on_release: app.root.current = 'menu'
                ActionButton:
                    text: 'Sair'
                    on_release: app.stop()

        BoxLayout:
            orientation: 'vertical'
            padding: (20, 5, 20, 10)
            spacing: 5
            canvas:
                Color:
                    rgba: [0.7,0.4,0.6,1]
                Rectangle:
                    size: self.size
                    pos: self.pos
                    
            Label:
                text: 'Data'
            TextInput:
                id: data
                multiline: False
                size_hint_y: None
                height: 30

            Label:
                text:'Almoço do dia'
            TextInput:
                id: almoco
                multiline: False
                size_hint_y: None
                height: 30

            Spinner:                    
                id: spMonitor        
                size_hint: None, None
                size: 150, 50
                text: 'Escolha Monitor'
                values: 'selecionar'
        
        BoxLayout:
            orientation: 'vertical'
            padding: (20, 10, 20, 20)
            spacing: 20
            canvas:
                Color:
                    rgba: [0.7,0.4,0.6,1]
                Rectangle:
                    size: self.size
                    pos: self.pos
        
            ScrollView:
                GridLayout:
                    id: grid
                    cols: 3  
                    spacing: 10, 10
                    size_hint_y: None
                    height: self.minimum_height

            Button:
                text: 'Salvar Frequência'
                size_hint_y: None
                height: 50
                size_hint_x: None
                width: 200
                pos_hint: {'center_x': 0.5}
                on_release: root.salvar_frequencia(data.text, almoco.text, spMonitor.text)

<Relatorio>:
    BoxLayout:
        orientation:'vertical'
        padding: 20
        spacing: 10
        canvas:
            Color:
                rgba: [0.7,0.4,0.6,1]
            Rectangle:
                size: self.size
                pos: self.pos

        Label:
            text:'Gráfico de setor: Quantidade de Meninos e Meninas que almoçaram todos os dias'
        
        Label:
            text:'Gráfico do quantitativo de pessoas que almoçaram: Dia X Almoço ofertado'
        
        Label:
            text:'Número máximo e mínimo de pessoas que almoçaram'
        
        Label:
            text:'Ranking das salas que mais almoçaram'

        BoxLayout:
            orientation:'horizontal'
            Button:
                size_hint_y: None
                height: 50
                width: 50
                text: 'Imprimir relatório'
            
            Button: 
                size_hint_y: None
                height: 50
                width: 50
                text: 'Voltar'
                on_release: app.root.current = 'menu'
